<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/img_avt"
        android:src="@drawable/avata"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle_background"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_user_adapter"
        android:layout_below="@+id/img_avt"
        android:text="Lê Xuân Phúc"
        android:layout_alignLeft="@id/img_avt"
        android:layout_alignRight="@id/img_avt"
        android:gravity="center"
        android:textSize="15dp"
        android:singleLine="true"></TextView>

</RelativeLayout>